<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Opgave 3</title>
  <style>
    .skak-felt {
      width: 50px;
      height: 50px;
    }

    .sort {
      background-color: black;
    }

    .hvid {
      background-color: white
    }
  </style>
</head>

<body>
  <table border="1px">
    <tbody>
      <% for(var i=0; i<x;i++) { %>
        <tr>
          <% for(var j=0; j<x; j++) { if((i+j)%2===0){ %>
            <td class="sort skak-felt"></td>
            <% } else { %>
              <td class="hvid skak-felt"></td>
              <% } %>
            <% } %>
        </tr>
      <% } %>
    </tbody>
  </table>
</body>

</html>